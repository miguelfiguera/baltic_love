<div class="container mx-auto">
<h2 class='text-center mt-5'>Admin</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <div class="container " style='max-width: 400px;'>
  <div class="container mx-auto fw-bold">
    <%= f.label :email,class:'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control' %>
  </div>

  <div class="container mx-auto fw-bold mt-4">
    <%= f.label :password,class:'form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password",class:'form-control',placeholder:'*******' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="container mx-auto mt-3 mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me%>
    </div>
  <% end %>

  <div class="container mx-auto col-3">
    <%= f.submit "Log in",class:' btn text-light',style:'background-color:rgb(212,15,174); scale:1.25' %>
  </div>
<% end %>
</div>
</div>